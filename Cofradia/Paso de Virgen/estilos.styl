body
	background grey
	color white
	font-size 14px
	postion absolute
	margin  0px
	text-align center

	header 
		background black
		display inline-block
		hight auto

		h1
			display inline-block
			font-family "Pinyon Script", Arial
			font-size 1.4em
			postion relative
			width 50%

		#imagen
			float left
			width 20%

		#image 
			float right
			width 20%

		nav
			background #ccc
			border-bottom 4px solid transparent
			border-left 10px solid black
			border-top 4px solid transparent
			border-bottom 4px solid transparent
			border-right 10px solid black
			border-top 4px solid transparent
			color white
			display inline-block
			font-size 1.4em
			text-align center
			vertical-align top
			width 90%

		nav ul
			list-style none
			margin 0px
			padding 0 0.8em

		nav ul li 
			display inline-block
			margin 0 1.2em 0 0
			vertical-align top

		nav ul li a 
			color black
			font-family "Dancing Script", Arial
			font-weight normal
			display block
			text-decoretion none
			padding 0 0

		nav ul li a:hover
			border-bottom 1px solid #0058A5
			margin 0px
			padding 0px

		nav #logo
			display inline-block
			border-radius 50%
			display inline 
			float left
			left 0 
			margin 0 0 0 0 
			postion relative
			top 1em
			text-decoretion none
			width 40px

	#contenedor
		background white
		display inline-block
		postion relative
		width 100%
		z-index 1em

		h2
			color black
			font-family "Pinyon Script", Arial
			font-size 1.0em
			float left
			margin 0.3em
			padding 0.3em
			text-align left
			width 90%

	#contenido
		color black
		display inline-block
		float left
		padding 0.3em
		postion relative
		text-align left
		width 60%

		#foto
			float left
			margin 0.4em
			margin-bottom 0.6em
			postion absolute
			width 25%

		#texto 
			display inline-block
			width 70%

			h3
				font-family "Pinyon Script", Arial
				

	#lateral
			display inline-block
			width 33%

			h3
				border-bottom 1px solid black
				color black
				font-family "Pinyon Script", Arial
				text-align left
				

			a 
				border-bottom 1px solid black
				color black
				display block
				text-align left
				text-decoration none
				padding 0.3em

			a:hover
				color blue

			#estilo
				font-weight bold
					

		#pie
			background black
			display inline-block
			font-size 1.0em
			postion relative			
			width 100%

			#redes
				float right
				display inline-block
				width 40%

				.social
					vertical-align top
					width 10%

			#avisos
				margin 0.3em 0.3em
				width 80%

				a 
					color white
					font-family "Pinyon Script", Arial
					font-size 1.0em
					padding 0.6em

				a:hover
					font-size 1.3em

			#presentacion
				display inline-block
				float left
				height auto
				vertical-align top
				width 60%

				#medalla
					border-radius 50%
					float left
					margin 0em 0.6em
					postion relative
					width 12% 

			#enlaces
				border-bottom 1px solid white
				border-top 1px solid white
				color white
				display inline-block
				font-size 1.0em
				float left
				postion relative
				text-align center
				text-decoration none
				width 90%

				#izquierda, #centro, #derecha
					vertical-align top
					width 50%

					.enlace 
						display inline-block
						font-size 0.7em
						padding 3.5em
						text-align center
						vertical-align top
						width 7%

						h3
							font-family "Pinyon Script", Arial
							font-size 1.5em

						a 
							color white
							font-family 1.0em
							text-decoration none

						a:hover
							color blue

			#calle
				color white
				display inline-block
				font-size 0.8em
				height auto
				vertical-align top
				width 90%

				#contacto
					display inline-block 
					top 0px
					width 80%

					a 
						color white
						font-size 1.0em

					a:hover
						color #aad
						font-size 1.2em

@import"responsive.styl"