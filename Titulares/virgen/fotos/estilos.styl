header
	background black
	color white
	display  inline-block
	margin 0.1em
	position relative
	vertical-align top
	width 96%

nav
	background grey
	border-bottom 4px solid transparent
	border-left 10px solid black
	border-top 4px solid black
	border-bottom 4px solid transparent
	border-right 10px solid black
	border-top 4px solid transparent
	color white
	display inline-block
	font-size 1.4em
	float left
	text-align center
	vertical-align top
	width 20%

nav ul
	list-style none
	margin 0px
	padding 0 0.8em

nav ul li 
	display inline-block
	margin 0 1.2em 0 0
	vertical-align top

nav ul li a 
	color white
	font-weight normal
	display block
	padding 0 0

nav ul li a:hover
	border-bottom 3px solid #0058A5
	margin 0px
	padding 0px

#contenedor
	color black
	display inline-block
	position relative
	width 96%