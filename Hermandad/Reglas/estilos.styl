body
	background #0e1132
	font-size 10px
	margin  0px
	text-align center

header
	background black
	color white
	display  inline-block
	margin 0.1em
	position relative
	vertical-align top
	width 96%

	#item
			background red
			display inline
			position relative
			top 1em
			width 50%
			z-index 1

			h1
				font-family "Diplomata SC", Arial
				font-size 1.3em
				font-weight bold


	#avatar
		background red
		width 100%

		#logo
			float right
			width 30%

		#Logo 
			float left
			left 0px
			width 32%

nav
	background #0e1132
	border-bottom 4px solid transparent
	border-left 10px solid black
	border-top 4px solid black
	border-bottom 4px solid transparent
	border-right 10px solid black
	border-top 4px solid transparent
	color white
	display inline-block
	font-size 1.4em
	text-align center
	vertical-align top
	width 90%

nav ul
	list-style none
	margin 0px
	padding 0 0.8em

nav ul li 
	display inline-block
	margin 0 1.2em 0 0
	vertical-align top

nav ul li a 
	color white
	font-weight normal
	display block
	padding 0 0

nav ul li a:hover
	border-bottom 3px solid #0058A5
	margin 0px
	padding 0px

#contenedor
	background #ffffff
	color black
	display inline-block
	position relative
	width 96%

#regla
	display inline-block
	float left
	margin 0.5em
	width 60%

	a 
		color black

	a:hover
		font-size 1.2em

	.catalogo
		width 100%


#izquierda
	float right
	margin 1em 0.3em
	width  25%
	z-index 1

	#video
		display inline-block
		padding 0.3em
		width 100%

		h3
			color black
			font-family "Kaushan Script", Arial
			font-size 0.8em
			font-weight none
			width 100%

		#youtube
			width 100%

	#admision
		border-top 1px solid black
		display inline-block
		padding 0.3em
		width 98%

		#admision-item
			margin 0.2em 0 0 0
			position relative
			top -10px
			width 100%

			a 
				color black
				text-decoration none

		.src
			border-radius 20px
			width 20%

#pie
	background #0e1132
	display inline-block
	color white
	font-size 1.2em
	width 100%

@import"responsive.styl"